<%- include("partials/header.ejs") %>

<div class="container">
    <h1><%= message %></h1>
    <p>Your email has been verified, you will be redirected shortly.</p>
    <script>
        document.cookie = "token=<%= authToken %>; path=/";
        setTimeout(function() {
            window.location.href = "<%= redirectUrl %>";
        }, 3000); // Redirect after 3 seconds
    </script>
</div>